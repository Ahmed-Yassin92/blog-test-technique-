{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f9fa; /* Couleur de fond gris clair */
        color: #333; /* Couleur du texte principale */
        margin: 0;
        padding: 0;
    }

    .blog-container {
        max-width: 800px;
        margin: 2em auto;
        background-color: #ffffff; /* Fond blanc */
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
        color: #007bff; /* Couleur du titre bleu */
    }

    ul {
        list-style: none;
        padding: 0;
    }

    li {
        margin-bottom: 10px;
    }

    code {
        background: #f5f5f5; /* Fond gris clair pour le code */
        padding: 2px 6px;
        border-radius: 4px;
    }

    /* Styles pour les boutons */
    .add-blog-button,
    .rate-post-button {
        background-color: #007bff; /* Couleur bleue pour le bouton */
        color: #fff; /* Couleur du texte blanc */
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        text-decoration: none;
        font-size: 16px;
        margin-right: 10px;
        display: inline-block;
    }

    .add-blog-button:hover,
    .rate-post-button:hover {
        background-color: #0056b3; /* Couleur bleue légèrement plus sombre au survol */
    }

    /* Styles pour le tableau */
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #007bff;
        color: #fff;
    }
</style>

<div class="blog-container">
    <h1>Voici le Blog</h1>
    <table>
        <thead>
            <tr>
                <th>Titre</th>
                <th>Descriptions</th>
                <th>Notes</th>
             
            </tr>
        </thead>
        <tbody>
        <p>Voulez-vous ajouter un article dans le blog ?</p>

    <a class="add-blog-button">Ajouter un Article</a>

    <a  class="rate-post-button">Noter un Post</a>
        </tbody>
    </table>
</div>
{% endblock %}
